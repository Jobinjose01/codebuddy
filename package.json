{
  "name": "codewithme",
  "displayName": "CodeWithMe: AI Assistant",
  "description": "Use LLM for code autocompletion, refactoring, and commenting.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jobinjose01/codebuddy.git"
  },
  "version": "0.0.1",
  "publisher": "Jobin Jose",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "CodeWithMe",
          "title": "CodeWithMe",
          "icon": "media/sidebaricon.png"
        }
      ]
    },
    "views": {
      "CodeWithMe": [
        {
          "type": "webview",
          "id": "CodeWithMeLLMSettingsView",
          "name": "Settings",
          "icon": "media/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "CodeWithMe.refactorCode",
        "title": "CodeWithMe: Refactor Code"
      },
      {
        "command": "CodeWithMe.commentCode",
        "title": "CodeWithMe: Comment Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "CodeWithMe.refactorCode",
          "when": "editorHasSelection",
          "group": "codewithme@1"
        },
        {
          "command": "CodeWithMe.commentCode",
          "when": "editorHasSelection",
          "group": "codewithme@2"
        }
      ]
    }
    ,
    "configuration": {
      "title": "CodeWithMe: AI Assistant",
      "properties": {
        "localLLM.url": {
          "type": "string",
          "default": "http://localhost:11434/api/generate",
          "description": "LLM API URL",
          "scope": "application"
        },
        "localLLM.token": {
          "type": "string",
          "default": "",
          "description": "Authorization token for the LLM",
          "scope": "application"
        },
        "localLLM.model": {
          "type": "string",
          "default": "qwen:7b",
          "description": "Model name",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "compile": "node build.js",
    "build": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.25.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "vsce": "^2.15.0"
  }
}
